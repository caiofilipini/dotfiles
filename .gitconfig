[user]
  name = Caio Filipini
  email = caiofilipini@gmail.com
[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[branch]
  autosetupmerge = true
[alias]
  ci = commit
  st = status -sb
  br = branch
  co = checkout
  df = diff
  lg = log -p
  who = shortlog -s --
[format]
  pretty = %Cgreen%h%Creset %Cblue[%cr]%Creset (%an) %s
[init]
  templatedir = ~/.git_template
